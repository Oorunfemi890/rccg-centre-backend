<!-- templates/emails/partials/components/contact-info.ejs -->
<%
// Usage: <%- include('partials/components/contact-info', { title: 'Contact Us' }) %>
%>
<div class="alert alert-info">
    <p><strong><%- title || '📞 Need Help?' %></strong></p>
    <p>If you have any questions or need assistance, please contact us:</p>
    <ul>
        <% if (churchEmail) { %>
        <li>📧 Email: <%- churchEmail %></li>
        <% } %>
        <% if (churchPhone) { %>
        <li>📱 Phone: <%- churchPhone %></li>
        <% } %>
        <% if (churchAddress) { %>
        <li>🏠 Address: <%- churchAddress %></li>
        <% } %>
        <% if (additionalInfo) { %>
        <% additionalInfo.forEach(info => { %>
        <li><%- info %></li>
        <% }); %>
        <% } %>
    </ul>
</div>
