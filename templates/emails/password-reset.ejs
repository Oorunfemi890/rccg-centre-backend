<%
const headerTitle = 'üîë Password Reset';
const headerBackground = 'linear-gradient(135deg, #4f46e5 0%, #06b6d4 100%)';
const content = `
    <p>Hello <strong>${admin.name}</strong>,</p>
    
    <p>You have requested to reset your password for your ${churchName} admin account.</p>
    
    <div class="text-center" style="margin: 30px 0;">
        <a href="${resetUrl}" class="btn btn-primary" style="font-size: 16px; padding: 15px 30px;">
            üîì Reset My Password
